# Shopify API Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_SECRET=your_shopify_secret_here
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com

# Supabase Configuration (if using database)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# App Configuration
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8888

# Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (if using notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Development Settings
DEBUG=true
LOG_LEVEL=info

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=*
SECURE_COOKIES=false

# Webhooks
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Feature Flags
ENABLE_PRODUCT_SYNC=true
ENABLE_AUTO_EXPORT=true
ENABLE_DESIGN_GALLERY=true